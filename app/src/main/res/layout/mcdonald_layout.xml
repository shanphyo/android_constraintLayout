<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#4C5813"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:paddingTop="10dp"
    >
    <ImageView
        android:id="@+id/iv_backarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:layout_marginLeft="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:src="@drawable/ic_lens_black_24dp"


            />
        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:src="@drawable/ic_lens_black_24dp"


            />
        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:src="@drawable/ic_lens_black_24dp"



            />
    </LinearLayout>

</LinearLayout>
    <TextView
        android:id="@+id/txt_profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="John McDonald"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#070707"

        />
    <TextView
        android:id="@+id/txt_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_profilename"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableLeft="@drawable/ic_add_location_black_24dp"
        android:text="Los Angles,CA"
           android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/btn_follow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_loc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Follow"
        android:textColor="#fff"
           android:background="@drawable/shape3"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="131dp"
        android:layout_height="187dp"
        android:layout_marginTop="30dp"
        android:elevation="2dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toRightOf="@id/txt_profilename"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu"

        >

        <ImageView
            android:id="@+id/iv_mcprofile"
            android:layout_width="129dp"
            android:layout_height="match_parent"
            android:src="@drawable/mcprofile"

            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_follow"
        android:text="34"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="35dp"
        android:textColor="#070707"
        />
    <TextView
        android:id="@+id/txt_nooffollower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_follow"
        app:layout_constraintLeft_toRightOf="@+id/txt_post"
        app:layout_constraintBaseline_toBaselineOf="@id/txt_post"
        android:text="1256"
        android:layout_marginLeft="40dp"
        android:textColor="#070707"
        />
    <TextView
        android:id="@+id/txt_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_post"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Posts"
        android:layout_marginLeft="30dp"
        />
         <TextView
             android:id="@+id/txt_offollower"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toBottomOf="@id/txt_nooffollower"
             app:layout_constraintLeft_toRightOf="@id/txt_posts"
             app:layout_constraintBaseline_toBaselineOf="@id/txt_posts"
             android:layout_marginLeft="21dp"
             android:text="Followers"
             />
    <LinearLayout
        android:id="@+id/ll_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_posts"
      android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="53dp"
            android:layout_height="100dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:src="@drawable/placeone" />

        <ImageView
            android:layout_width="53dp"
            android:layout_height="100dp"
            android:src="@drawable/placetwo" />

        <ImageView
            android:layout_width="53dp"
            android:layout_height="100dp"
            android:src="@drawable/placethree"

            />
        <ImageView
            android:layout_width="53dp"
            android:layout_height="100dp"
            android:src="@drawable/placefour"
            />
        <ImageView
            android:layout_width="53dp"
            android:layout_height="100dp"
            android:src="@drawable/placesix"
            />
        <ImageView
            android:layout_width="53dp"
            android:layout_height="100dp"
            android:src="@drawable/placefour"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_vector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_image"
        android:layout_marginTop="10dp"

        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/browser"
            android:layout_marginLeft="50dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/fb"
            android:layout_marginLeft="40dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/instragram"
            android:layout_marginLeft="40dp"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="30dp"
          android:text="Be"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#070606"
            android:layout_marginLeft="40dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/twitter"
            android:layout_marginLeft="40dp"
            />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="556dp"
        app:layout_constraintTop_toBottomOf="@id/ll_vector"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:elevation="5dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#0C0C0C"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Him poetic eye. Searched andy remedies. Trial. Was \npoverty a schemes him he dressing mountains and as \nsurprise haven't subject and could a entered would in the of be not posts, doing the never publication legs"
                android:layout_marginBottom="100dp"

                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>