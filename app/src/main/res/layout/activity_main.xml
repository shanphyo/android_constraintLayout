<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC9292"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape1"
        android:src="@drawable/flower"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="50dp"
        android:paddingBottom="100dp"


        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="150dp"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lens_black_24dp"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:background="@drawable/shape"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"

        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_drag_handle_black_24dp"
            android:layout_marginLeft="110dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:text="MY LOVE, \nYOU LIKE A FLOWER "
            android:textColor="#0D47A1"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editor's Choice"
            android:drawableLeft="@drawable/ic_star_black_24dp"
            android:textColor="#BF360C"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0D47A1"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:text="We're all a little weired. And life is a little\nweired. And when
we find someone whose \nweiredness is compatible with ours, we join \n up
with them and fall into mutaully \n satisfying
weirdness-and call id love-true \nlove. \n\n
And in this crazy life, and through these "
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 99.9"
                android:textColor="#0D47A1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingLeft="30dp"
                />
            <Button
                android:id="@+id/btn_order"
                android:layout_width="140dp"
                android:layout_height="40dp"
               android:text="Order Now"
                android:background="@drawable/shape2"
                android:padding="10dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>